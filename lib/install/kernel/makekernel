#!../../runscript
_fetch_kernel() {
   filename=linux-$vers.tar.gz
   url=http://www.eu.kernel.org/pub/linux/kernel/v2.6/$filename
   LOG+
   LOG "Fetching kernel:$none $url"
   LOG-
   [[ -d $kdir ]] || mkdir -p $kdir
   [[ -e tmp/kernel/$filename ]] || _ wget $url -O tmp/kernel/$filename
   [[ -e $kdir/Makefile ]] || _ tar xzf tmp/kernel/$filename -C tmp/kernel
}

_compile_kernel() {
   cd $kdir
   #make clean
   _ make mrproper
   _ cp /boot/config-`uname -r` ./.config
   _ make menuconfig
   _ make -j 4 all
}

vers=2.6.26

LOG+
LOG "Build kernel:$none $vers"
kdir=tmp/kernel/linux-$vers
_fetch_kernel
