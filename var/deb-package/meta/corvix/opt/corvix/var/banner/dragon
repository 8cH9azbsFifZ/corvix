echo -ne $g' <  >      |('$w',,'$g') )__)\n'
echo -ne $g'  ||      /    \)___)\ \n'
echo -ne $g'  | \____(      )___) )___\n'
echo -ne $g'   \______(_______'$w';;;'$g' __'$w';;;'$g'\n'$w
