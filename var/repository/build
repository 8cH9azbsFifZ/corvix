#!/bin/zsh
./clean
# copy .deb files
cp ../deb-package/*deb dists/testing/meta/binary-all/

# make directory strucutre
cd dists/testing/meta/
for a in binary-arm binary-i386 binary-alpha; do 
   ln -s binary-all $a
done
cd ../../../

# create & sign package list
apt-ftparchive packages dists/testing/meta/binary-all |gzip >dists/testing/meta/binary-all/Packages.gz
# create & sign release file
apt-ftparchive release ./dists/ > ./dists/Release
[[ -e dists/Release.gpg ]] && rm dists/Release.gpg 
gpg -u corvix.eu -abs -o dists/Release.gpg dists/Release

